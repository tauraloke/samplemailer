<%= simple_form_for(@letter, url:'/', html: {class:'letter_form'}) do |f| %>
  <h1>Send me a letter ☘ </h1>
  <%= f.text_field 'name', placeholder: 'Title' %>
  <%= f.email_field 'email', placeholder: 'Vanya@Doe.name' %>
  <%= f.text_area 'message', placeholder: 'Tell me more... ☠ ' %><%=f.error 'message' %>
  <%= f.file_field 'image' %><%= f.error 'image' %>
  <%= recaptcha_tags %>
  <%= submit_tag 'Send' %>
<% end %>
